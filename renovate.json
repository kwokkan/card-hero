{
  "extends": [
    "config:base",
    "group:definitelyTyped",
    "group:fortawesome",
    "group:linters",
    "group:reactMonorepo"
  ],
  "labels": [
    "library"
  ],
  "masterIssue": true,
  "packageRules": [
    {
      "groupName": ".NET Core docker",
      "packageNames": [
        "mcr.microsoft.com/dotnet/aspnet",
        "mcr.microsoft.com/dotnet/sdk"
      ]
    },
    {
      "groupName": ".NET Core monorepo",
      "sourceUrlPrefixes": [
        "https://github.com/aspnet/",
        "https://github.com/dotnet/"
      ]
    },
    {
      "groupName": "create-react-app monorepo",
      "sourceUrlPrefixes": [
        "https://github.com/facebook/create-react-app"
      ]
    },
    {
      "groupName": "NSwag monorepo",
      "sourceUrlPrefixes": [
        "https://github.com/RicoSuter/NSwag"
      ]
    },
    {
      "groupName": "webpack-contrib monorepo",
      "sourceUrlPrefixes": [
        "https://github.com/webpack-contrib/"
      ]
    }
  ],
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],
  "prHourlyLimit": 0,
  "rebaseStalePrs": true,
  "schedule": [
    "after 6pm and before 8am"
  ]
}
