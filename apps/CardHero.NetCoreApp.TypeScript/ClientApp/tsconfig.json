{
  "compilerOptions": {
    "noEmitOnError": true,

    "alwaysStrict": true,
    "noEmitHelpers": true,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noResolve": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    //"strictPropertyInitialization": true,
    //"strictNullChecks": true,

    "removeComments": true,
    "sourceMap": true,
    "target": "esnext",
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "jsx": "react",
    "esModuleInterop": true,
    "outDir": "./obj/ts/",
    "traceResolution": true,

    "allowJs": true,
    //"checkJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*",

    //HACK: workaround for TypeScript not being able to find type definitions
    "node_modules/@fortawesome/**/index.d.ts",
    "node_modules/dayjs/**/*.d.ts",
    "node_modules/mockdate/**/*.d.ts",
    "node_modules/react-bootstrap/**/*.d.ts",
    "node_modules/react-chartjs-2/**/*.d.ts",
    "node_modules/react-dnd/**/*.d.ts",
    "node_modules/react-dnd-html5-backend/**/*.d.ts"
  ]
}
